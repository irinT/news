<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Anton|Barlow+Condensed|Lobster&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>
  <body>

    <div class="container mt-3 page">
      <h1>News page</h1>


<div class="row">
  <div class="col-sm-12">
   
        <div class="title"> 
        Today's News: 
        </div>

        <div> 
        
            <% for num_article in @article%>
                <% @headline=num_article["title"] %>
                <% @newsurl=num_article["url"] %>
                <div class="headline"> 
                 <%= "#{@headline}"%>
                </div>
                <a href=<%= "#{@newsurl}"%>>Read more..</a><p>

            <%end%>

        </div>

        <div class="row">
            <div class="col-8 col-sm-6">
                 <div class="title"> 
                Location : <%= @location_name %> 

                </div> 
            <div>
            <iframe
            frameborder="0" style="border:1"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
            &q=<%= @coordinates %>&zoom=6" allowfullscreen>
            </iframe>
            </div>
        </div>


    <div class="col-4 col-sm-6">
            <div class="title"> 
            Today's weather
            <i class="fas fa-cloud-sun"></i>
            
            </div>
            <div class="temp"> 
            <%= @current_temp %> F
            </div>
            
            <div class="weather">
            It is currently <%= @current_summary %>
            <p> A high temperature of <%= @high %> F and a low temperature of <%= @low %> F
            </div> 

            <div>
           <p class="title">  Temperature forecast
        
           <p> 
         
                <%for i in 1..7%>
                <%day=@forecast_array[i]%>
                <%=pp "There will be a high temperature of #{day["temperatureHigh"]}Fand #{day["summary"]} <p>" %>
                <%i=i+1%>
                <%end%>

            </div>

      
    </div>
    </div>
    </div>
    <div>






</div>





    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>